{
    "name": "holly",
    "displayName": "Holly",
    "description": "A color theme made with love <3",
    "version": "0.0.1",
    "main": "./src/extension.js",
    "author": "Andrew Rusinas",
    "publisher": "Rusinas",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Rusinas/holly"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    
    "contributes": {
        "themes": [
            {
                "label": "Holly",
                "uiTheme": "vs-dark",
                "path": "./themes/Holly-color-theme.json"
            }
        ],
        "commands": [
            {
                "command": "holly.beautify",
                "title": "Holly: Make it beatiful :3"
            },
            {
                "command": "holly.uglify",
                "title": "Holly: Unmake it beatiful :("
            }
        ]
    }
}